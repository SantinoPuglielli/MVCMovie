@{
    ViewData["Title"] = "Formulario de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegurate que este path es correcto
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow p-4">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Registro de Usuario</h4>

                <form asp-controller="Usuario" asp-action="ForMethod" method="get">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Usuario">
                        <label for="username">Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">
                        <label for="password">Password</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                        <label for="email">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Nombre">
                        <label for="name">Name</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="text" class="form-control" id="fechanacimiento" name="fechanacimiento" placeholder="Fecha de Nacimiento">
                        <label for="fechanacimiento">Fecha Nacimiento</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Cargar y obtener Usuarios</button>
                </form>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-success mt-4" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>
